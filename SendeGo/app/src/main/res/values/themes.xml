<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SendeGo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="textInputStyle"> @style/TextFieldStyle</item>
        <item name="android:textViewStyle">@style/textViewStyle</item>
        <item name="materialButtonStyle">@style/buttonStyle</item>
    </style>

    <style name="TextFieldStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:textColorHint" >@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxBackgroundColor">@color/textField_gray</item>
        <item name="boxBackgroundMode">filled</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textColorPrimary">@color/text_dark</item>
    </style>

    <style name="buttonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/dark_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>